<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/chart"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:id="@+id/linearLayout10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonok1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="1"
                android:background="@android:drawable/list_selector_background"
                android:drawableLeft="@drawable/ic_baseline_autorenew_24px"
                android:text="刷新" />

            <Button
                android:id="@+id/buttonok2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="1"
                android:background="@android:drawable/list_selector_background"
                android:drawableLeft="@drawable/ic_baseline_date_range_24px"
                android:text="查询" />

            <Button
                android:id="@+id/buttonok3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="1"
                android:background="@android:drawable/list_selector_background"
                android:drawableLeft="@drawable/ic_baseline_save_24px"
                android:text="导出" />

            <Button
                android:id="@+id/buttonok4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="1"
                android:background="@android:drawable/list_selector_background"
                android:drawableLeft="@drawable/ic_baseline_delete_24px"
                android:text="清空" />

        </LinearLayout>

        <ListView
            android:id="@+id/datalist"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_margin="10dp"
            android:transcriptMode="alwaysScroll" />

    </LinearLayout>
    </ScrollView>


</LinearLayout>